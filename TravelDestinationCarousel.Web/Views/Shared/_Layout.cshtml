<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Destination Carousel</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="#" class="logo">Travel Destination Carousel</a>
            <ul class="nav-links ">
                <li><a href="#home">Login</a></li>
                @* <li><a href="#destinations">Destinations</a></li> *@
                @* <li><a href="#experiences">Experiences</a></li> *@
                @* <li><a href="#plan">Plan Trip</a></li> *@
                @* <li class="d-none"><a href="#contact">Contact</a></li> *@
            </ul>
        </div>
    </nav>

    <section class="hero-carousel-container">
        <div id="loading" class="loading">
            <i class="fas fa-spinner"></i>
            <p>Loading amazing destinations...</p>
        </div>

        <div id="heroCarousel" class="owl-carousel owl-theme" style="display: none;">
            @RenderBody();
        </div>
    </section>

    <section class="featured-section">
        <div class="section-container">
            <div class="section-header">
                <h2 class="section-title">Featured Destinations</h2>
                <p class="section-subtitle">Discover the gems of Gujarat</p>
            </div>

            <div id="featuredGrid" class="destinations-grid">
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>